<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.calculator.ScientificActivity"
    tools:showIn="@layout/activity_scientific"
    android:orientation="vertical">
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:textSize="25sp"
        android:paddingEnd="10dp"/>
    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:rowCount="7"
        android:columnCount="5"
        android:padding="10dp">
        <Button
            android:id="@+id/sqr"
            android:text="x^2"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/exp"
            android:text="x^y"
            android:onClick="operatorClicked"/>
        <Button
            android:id="@+id/sin"
            android:text="sin"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/cos"
            android:text="cos"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/tan"
            android:text="tan"
            android:onClick="unaryOperatorClicked"/>

        <Button
            android:id="@+id/sqrt"
            android:text="√"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/sci"
            android:text="10^x"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/log"
            android:text="log"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/ex"
            android:text="e^x"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/mod"
            android:text="mod"
            android:onClick="operatorClicked"/>

        <Button
            android:id="@+id/e"
            android:text="e"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/ce"
            android:text="CE"
            android:onClick="cClicked"/>
        <Button
            android:id="@+id/c"
            android:text="C"
            android:onClick="cClicked"/>
        <Button
            android:id="@+id/bs"
            android:text="←"
            android:onClick="bsClicked"/>
        <Button
            android:id="@+id/div"
            android:text="÷"
            android:onClick="operatorClicked"/>
        <Button
            android:id="@+id/pi"
            android:text="π"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/b7"
            android:text="7"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/b8"
            android:text="8"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/b9"
            android:text="9"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/mul"
            android:text="✕"
            android:onClick="operatorClicked"/>
        <Button
            android:id="@+id/frac"
            android:text="n!"
            android:onClick="unaryOperatorClicked"/>
        <Button
            android:id="@+id/b4"
            android:text="4"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/b5"
            android:text="5"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/b6"
            android:text="6"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/min"
            android:text="-"
            android:onClick="operatorClicked"/>
        <Button
            android:id="@+id/bl2"
            android:text=""
            android:onClick="cClicked"/>
        <Button
            android:id="@+id/b1"
            android:text="1"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/b2"
            android:text="2"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/b3"
            android:text="3"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/plu"
            android:text="+"
            android:onClick="operatorClicked"/>
        <Button
            android:id="@+id/bl3"
            android:text=""
            android:onClick="cClicked"/>
        <Button
            android:id="@+id/neg"
            android:text="+/-"
            android:onClick="negateClicked"/>
        <Button
            android:id="@+id/b0"
            android:text="0"
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/dec"
            android:text="."
            android:onClick="numberClicked"/>
        <Button
            android:id="@+id/eq"
            android:text="="
            android:onClick="equalsClicked"/>
    </GridLayout>

</LinearLayout>
